<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PlutoniumAltLauncher.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="800"
        x:Class="PlutoniumAltLauncher.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="PlutoniumAltLauncher">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Window.Styles>
        <StyleInclude Source="/Styles/MainWindowStyle.axaml"/>
    </Window.Styles>
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        
        <Button HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="PlutoniumOnline" 
                Click="LaunchGame_OnClick"
                PointerEntered="OnPointerEntered"
                PointerExited="OnPointerExited">
            <Image Source="avares://PlutoniumAltLauncher/Assets/images/classic.png" Stretch="UniformToFill" />
        </Button>

        <Button HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0" Name="PlutoniumT4SPZM" Opacity="0.3"
                Click="LaunchGame_OnClick"
                PointerEntered="OnPointerEntered"
                PointerExited="OnPointerExited">
            <Image Source="avares://PlutoniumAltLauncher/Assets/images/t4sp.png" Stretch="UniformToFill" />
        </Button>
        <Button HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" Name="PlutoniumT4MP" Opacity="0.3"
                Click="LaunchGame_OnClick"
                PointerEntered="OnPointerEntered"
                PointerExited="OnPointerExited">
            <Image Source="avares://PlutoniumAltLauncher/Assets/images/t4mp.png" Stretch="UniformToFill" />
        </Button>
        
        <Button HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0" Name="PlutoniumT5SPZM" Opacity="0.3"
                Click="LaunchGame_OnClick"
                PointerEntered="OnPointerEntered"
                PointerExited="OnPointerExited">
            <Image Source="avares://PlutoniumAltLauncher/Assets/images/t5sp.png" Stretch="UniformToFill" />
        </Button>
        <Button HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1" Name="PlutoniumT5MP" Opacity="0.3"
                Click="LaunchGame_OnClick"
                PointerEntered="OnPointerEntered"
                PointerExited="OnPointerExited">
            <Image Source="avares://PlutoniumAltLauncher/Assets/images/t5mp.png" Stretch="UniformToFill" />
        </Button>
        
        <Button HorizontalAlignment="Center" Grid.Row="3" Grid.Column="0" Name="PlutoniumT6ZM" Opacity="0.3"
                Click="LaunchGame_OnClick"
                PointerEntered="OnPointerEntered"
                PointerExited="OnPointerExited">
            <Image Source="avares://PlutoniumAltLauncher/Assets/images/t6zm.png" Stretch="UniformToFill" />
        </Button>
        <Button HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" Name="PlutoniumT6MP" Opacity="0.3"
                Click="LaunchGame_OnClick"
                PointerEntered="OnPointerEntered"
                PointerExited="OnPointerExited">
            <Image Source="avares://PlutoniumAltLauncher/Assets/images/t6mp.png" Stretch="UniformToFill" />
        </Button>
        
        <Button HorizontalAlignment="Center" Grid.Row="4" Grid.Column="0" Name="PlutoniumIW5SP" Opacity="0.3"
                Click="LaunchGame_OnClick"
                PointerEntered="OnPointerEntered"
                PointerExited="OnPointerExited">
            <Image Source="avares://PlutoniumAltLauncher/Assets/images/iw5mp.png" Stretch="UniformToFill" />
        </Button>
        <Button HorizontalAlignment="Center" Grid.Row="4" Grid.Column="1" Name="PlutoniumIW5MP" Opacity="0.3"
                Click="LaunchGame_OnClick"
                PointerEntered="OnPointerEntered"
                PointerExited="OnPointerExited">
            <Image Source="avares://PlutoniumAltLauncher/Assets/images/iw5mp.png" Stretch="UniformToFill" />
        </Button>
        
        <Canvas Grid.Row="0" Grid.Column="1">
            <Button Content="⚙️"
                    Canvas.Right="20"
                    Canvas.Top="20"
                    Click="OpenSettings_OnClick"
                    FontSize="20"/>
        </Canvas>
        <!-- <TextBlock HorizontalAlignment="Center" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Name="ButtonViewer">Waiting for presses</TextBlock> -->
        <!--<Button HorizontalAlignment="Center" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Click="CloseProgram_OnClick">Close</Button>-->
    </Grid>

</Window>
